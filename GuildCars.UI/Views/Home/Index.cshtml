@model List<GuildCars.UI.Models.CarViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BIG HUGE SALE!</h1>
    <p class="lead">Vehicles on sale.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2>Featured Vehicles</h2>
        @foreach (var car in @Model.Take(8))
        {
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-3">
                <div class="card" style="border:2px solid #0094ff; width: 20rem; border-radius: 5px;  ">
                    <div class="pl-3 pt-1 text-center">
                        <img src="@Url.Content("~/Images/" + car.ImageFileName)" style="height : 100px;width : auto;" />
                        <h4 class="card-title text-primary">@car.Year @car.MakeName @car.ModelName</h4>
                        <h4>@car.SalePrice</h4>
                    </div>
                    <br />
                </div>
                <br />
            </div>
        }
    </div>    
</div>

<div class="row">
    <div class="col-md-4">
        <h2>The best cars</h2>
        <p>
            Ranked #1 Car Sale Customer Satisfaction by J.D. Power*, GuildCars offers exceptional service and vehicles on every rental.
            GuildCars Gold Plus Rewards® members enjoy special benefits with the #1 car sales loyalty program†. Members can skip the counter,
            pick any car and go with GuildCars Ultimate Choice® and add a free Additional Driver. Enrollment in Hertz Gold Plus Rewards® is fast and free.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>

</div>