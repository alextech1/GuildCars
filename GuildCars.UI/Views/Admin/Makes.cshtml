@model GuildCars.UI.Models.MakesViewModel
@{
    ViewBag.Title = "Makes";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">
        <h2>Add Make</h2>
        @using (Html.BeginForm("Makes", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddMake" }))
        {
            <div class="row">
                <div class="form-group">
                    <label>Make</label>
                    @Html.TextBoxFor(m => m.Make.MakeName, new { @class = "form-control" })
                </div>
            </div>
            <button class="btn btn-primary">Add</button>
        }
    </div>
</div>


<h2>Makes</h2>

<div>
    <table>
        <tr>
            <th>Make</th>
            <th>Date Added</th>
            <th>User</th>
        </tr>

        @foreach (var make in @Model.MakesVM)
        {
            <tr>
                <td>@make.MakeName</td>
                <td>@make.DateAdded</td>
                <td>@make.User</td>

            </tr>
        }

    </table>
</div>
